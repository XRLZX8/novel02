function TopLogin(){
    $.ajax({
		type: "POST",
		dataType: "json",
		url: "/login.php" ,
		data: $('#mylogin').serialize(),
		success: function (result) {
          window.location.href=window.location.href
		},
		error : function() {
			alert("通讯异常！");
		}
	});
}
//目录页
function addBookCase(bookid,chapterid,chaptername){
	$.ajax({
		async:false,
		type:'POST',
		url:'/bookcase/add.php',
		data:"bookid="+bookid+"&chapterid="+chapterid+"&chaptername="+chaptername,
		dataType:'json',
		success:function(rs) {
			if(rs!=null&&typeof(rs.success) != 'undefined') {
				alert(rs.msg);
				if (rs.success =="relogin"){
					location.href="/login.php?return_uri="+window.location.href;
				}
			} else {
				alert("加入书架失败");
			}
		}
	});
}
//错误
function postError(bid,cid){
    $.post('/posterror.php', {'bid': bid, 'cid': cid }, function (data) {
        data = eval("(" + data + ")");
		alert(data.message);
	});
}
